class Solution {
public:
    long long minimumRemoval(vector<int>& beans) {
        sort(beans.begin(),beans.end());
        int n=beans.size();
        long long ans=LLONG_MAX,sum=accumulate(beans.begin(),beans.end(),0LL);
        for(int i=0;i<n;i+=1){
            long long left=sum-(1LL*beans[i]*(n-i));
            ans=min(ans,left);
        }
        return ans;
    }
};
