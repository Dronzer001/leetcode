class Solution {
public:
    int minimumFlips(int n) {
        string s="";
        while(n!=0){
            s=to_string(n%2)+s;
            n/=2;
        }
        int ans=0;
        string s1=s;
        reverse(s.begin(),s.end());
        for(int i=0;i<s.length();i+=1){
            if(s[i]!=s1[i]) ans+=1;
        }
        return ans;
    }
};
