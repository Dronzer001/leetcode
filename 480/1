class Solution {
public:
    int absDifference(vector<int>& nums, int k) {
        sort(nums.begin(),nums.end());
        int max1=0,min1=0;
        for(int i=0;i<nums.size() && i<k;i+=1){
            min1+=nums[i];
        }
        for(int i=nums.size()-1;i>=0 && k>0;i--,k--){
            max1+=nums[i];
        }
        return max1-min1;
    }
};
