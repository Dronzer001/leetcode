class Solution {
public:
    int smallestAbsent(vector<int>& nums) {
        int sum=0;
        for(int i=0;i<nums.size();i++) sum+=nums[i];
        double avg=(double)sum/nums.size();
        unordered_set<int>s(nums.begin(),nums.end());
        sort(nums.begin(),nums.end());
        int c=max(1,(int)floor(avg)+1);
        while(s.count(c)) c++;
        return c;
    }
};
