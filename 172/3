class Solution {
public:
    long long maximumScore(vector<int>& nums, string s) {
        int n=nums.size();
        long long score=0;
        priority_queue<long long>pq;
        int i=0;
        while(i<n){
            pq.push(nums[i]);
            if(s[i]=='1'){
                score+=pq.top();
                pq.pop();
            }
            i+=1;
        }
        return score;
    }
    
};
