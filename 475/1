class Solution {
public:
    int minimumDistance(vector<int>& nums) {
        int n=nums.size();
        int ans=INT_MAX;
        for(int i=0;i<n-2;i+=1){
            int j=i+1;
            for(j;j<n-1;j+=1){
                int k=j+1;
                for(k;k<n;k+=1){
                    if(nums[i]==nums[j] && nums[j] ==nums[k]){
                        ans=min(ans,abs(i-j)+abs(j-k)+abs(k-i));
                    }
                }
            }
        }
        return ans==INT_MAX? -1:ans;
    }
};
