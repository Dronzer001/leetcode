class Solution {
public:
    double myPow(double x, int n) {
        long long s=n;
        if(s<0){
            x=1/x;
            s=-s;
        }
        return mid(x,s);
    }
    double mid(double x, long long n){
        if(n==0) return 1.0;
        double ans=mid(x,n/2);
        if(n%2==0) return ans*ans;
        else return ans*ans*x;
    }
};
