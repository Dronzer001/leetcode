class Solution {
public:
    long long minCost(string s, vector<int>& cost) {
        int n=s.length();
        if(n==1) return 0;
        unordered_map<char,long long>mid;
        long long ans=0;
        for(int i=0;i<n;i+=1) mid[s[i]]+=cost[i];
        long long maxchar=INT_MIN;
        long long total=0;
        for(auto it:mid) {
            if(maxchar==INT_MIN)
                maxchar=it.second;
            else maxchar=max(maxchar,it.second);
            total+=it.second;
        }
        return total-maxchar;
    }
};Â©leetcode
