class Solution {
public:
    int numberOfSubstrings(string s) {
        int start=0,count=0;
        unordered_map<char,int>ans;
        for(int end=0;end<s.length();end++){
            ans[s[end]]++;
            while(ans.size()==3){
                count+=s.length()-end;
                ans[s[start]]--;
                if(ans[s[start]]==0) ans.erase(s[start]);
                start+=1;
            }
        }
        return count;
    }
};
